<h1> Join the Burger Club!</h1> 
	<h1> <img src= "/assets/images/burger2.jpg" alt="burger"> </h1> 

<div id= "uneaten"> 
	<h2>Burgers!</h2> 

	<ul> 
		{{#each burger_data}}
			{{#unless this.devoured}}
				<li>
					{{this.id}}.{{this.burger_name}}

					<form action="/burgers/update?_method=PUT" method = "POST">
						<input type="hidden" name="burger_id" type="text" value={{this.id}}>
						<button type="submit"> EAT IT!</button>
					</form>

				</li>
			{{/unless}}
		{{/each}}
	</ul>
</div>

<div id="eaten">
	<h2>Devoured Burgers! </h2>
	<ul>
		{{#each burger_data}}
			{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
			{{/if}}
		{{/each}}
	</ul>
</div>


<div id="add"> 
	<h2>Add a Burger</h2>
	<form class="create-update-form" action="/burgers/create" method="POST">

		<div class="form-group">
			<label for="ca">Burger: </label>
			<input type="text" id="ca" name="burger_name">
		</div>

		<button type="submit">Add Burger</button>
	</form> 
</div>

